    "drizzle-seed": "^0.3.1",
    "drizzle-zod": "^0.8.2",
    "hono": "^4.8.3",
    "i": "^0.3.7",
    "pg": "^8.16.3",
    "zod": "^3.25.67"
  },
  "devDependencies": {
    "@types/node": "^24.0.4",
    "@types/pg": "^8.15.4",
    "eslint": "^9.29.0",
    "eslint-config": "workspace:*",
    "eslint-plugin-format": "^1.0.1",
    "nodemon": "^3.1.10",
    "tsc-alias": "^1.8.16",
