{
  "name": "api",
  "type": "module",
  "version": "0.0.0",
  "private": true,
  "description": "",
  "exports": {
    "./types": "./src/lib/types.ts",
    "./schema": "./src/lib/validation-schema.ts",
    "./rpc": "./src/lib/rpc.ts"
  },
  "scripts": {
    "build": "npx tsc && tsc-alias",
    "dev": "NODE_ENV=development nodemon --env-file=.env --exec tsx src/index.ts",
